{
  "name": "accounter-toolkit",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "ci:lint": "eslint --output-file eslint_report.json --format json",
    "prettier": "prettier --ignore-path .gitignore --write --list-different .",
    "prettier:check": "prettier --check .",
    "prebuild": "rimraf dist/ .bob/ && yarn lint && yarn prettier && yarn workspaces run prebuild",
    "build": "bob build",
    "postbuild": "yarn workspaces run postbuild",
    "release": "yarn build && changeset publish"
  },
  "engines": {
    "node": "18.9.0"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.24.4"
  },
  "devDependencies": {
    "@theguild/eslint-config": "0.0.2",
    "@theguild/prettier-config": "0.0.3",
    "@types/node": "18.7.13",
    "bob-the-bundler": "4.0.0",
    "concurrently": "7.3.0",
    "eslint": "8.23.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-sql": "0.11.0",
    "typescript": "4.8.3"
  }
}
