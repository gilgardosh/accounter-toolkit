{
  "name": "accounter-toolkit",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "18.17.0"
  },
  "scripts": {
    "build": "bob build",
    "ci:lint": "eslint --output-file eslint_report.json --format json",
    "lint": "eslint --ignore-path .gitignore .",
    "mesh:artifacts-rename": "yarn ts-node ./helpers/mesh-artifacts-rename.mjs",
    "postinstall": "patch-package",
    "pre-commit": "lint-staged",
    "prebuild": "rimraf dist/ .bob/ && yarn lint && yarn prettier && yarn workspaces run prebuild && yarn mesh:artifacts-rename",
    "prettier": "prettier --ignore-path .prettierignore --write --list-different .",
    "prettier:check": "prettier --check .",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "glob": "10.3.3"
  },
  "devDependencies": {
    "@theguild/eslint-config": "0.11.0",
    "@theguild/prettier-config": "2.0.0",
    "@types/node": "20.4.5",
    "bob-the-bundler": "7.0.1",
    "concurrently": "8.2.0",
    "eslint": "8.45.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "patch-package": "^7.0.2",
    "prettier": "3.0.0",
    "prettier-plugin-sql": "0.15.1",
    "typescript": "5.1.6"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "lint-staged": {
    "*.--write": "prettier --write"
  }
}
