{
  "name": "@accounter-toolkit/payper-mesh",
  "version": "0.0.10",
  "description": "Graphql server for wrapping payper API",
  "type": "module",
  "scripts": {
    "lint": "eslint './src/*/**/*.{js,ts,tsx}' --quiet --fix",
    "prebuild": "yarn lint && yarn generate",
    "build": "tsc",
    "postbuild": "yarn copy-files",
    "copy-files": "cp -a .mesh/ dist/.mesh/",
    "prepublish": "yarn build",
    "mesh:serve": "mesh serve",
    "mesh:build": "mesh build",
    "generate": "yarn mesh:build",
    "dev": "ts-node ./index.ts",
    "start": "node ./dist",
    "test": "ts-node ./dev-tests/e2e.ts"
  },
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^14.20.0 || ^16.16.0 || >=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gilgardosh/accounter-toolkit.git",
    "repository": "packages/payper-mesh"
  },
  "bugs": {
    "url": "https://github.com/gilgardosh/accounter-toolkit/issues"
  },
  "homepage": "https://github.com/gilgardosh/accounter-toolkit/packages/payper-mesh#readme",
  "author": "Gil Gardosh <gilgardosh@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@graphql-mesh/cli": "0.65.0",
    "@graphql-mesh/json-schema": "0.26.9",
    "@graphql-mesh/transform-resolvers-composition": "0.12.36",
    "graphql": "16.3.0",
    "path": "0.12.7"
  },
  "devDependencies": {
    "ts-node": "10.7.0"
  },
  "keywords": [
    "payper",
    "graphql",
    "mesh",
    "accountancy",
    "accountant"
  ]
}
