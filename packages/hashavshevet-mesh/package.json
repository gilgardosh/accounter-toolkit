{
  "name": "@accounter-toolkit/hashavshevet-mesh",
  "version": "0.0.3",
  "type": "module",
  "description": "Graphql proxy for Hashavshevet API",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilgardosh/accounter-toolkit.git",
    "repository": "packages/hashavshevet-mesh"
  },
  "homepage": "https://github.com/gilgardosh/accounter-toolkit/packages/hashavshevet-mesh#readme",
  "bugs": {
    "url": "https://github.com/gilgardosh/accounter-toolkit/issues"
  },
  "author": "Gil Gardosh <gilgardosh@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "^14.20.0 || ^16.16.0 || >=18.0.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "keywords": [
    "hashavshevet",
    "accountancy",
    "accountant",
    "accounter",
    "graphql",
    "mesh"
  ],
  "scripts": {
    "build": "bob build",
    "dev": "ts-node ./index.ts",
    "generate": "NODE_OPTIONS=\"--loader ts-node/esm\" mesh build --dir src && rimraf src/mesh-artifacts && mv src/.mesh src/mesh-artifacts",
    "postbuild": "exit 0",
    "prebuild": "yarn generate",
    "start": "node ./dist",
    "test": "DEBUG=1 node ./dist/esm/dev-tests/e2e.js"
  },
  "dependencies": {
    "@graphql-mesh/cli": "0.82.6",
    "@graphql-mesh/json-schema": "0.37.4",
    "@graphql-mesh/transform-resolvers-composition": "0.13.3",
    "graphql": "16.6.0"
  },
  "devDependencies": {
    "dotenv": "16.0.3",
    "ts-node": "10.9.1"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "bob": {
    "build": {
      "copy": [
        "src/json-schemas"
      ]
    }
  },
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  }
}
